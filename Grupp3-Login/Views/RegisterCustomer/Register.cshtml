@model Grupp3_Login.Models.Account
@{
    ViewData["Title"] = "Registrera konto";
}

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
    <form asp-action="RegisterCustomer" asp-controller="RegisterCustomer" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="userName" class="form-label">Användarnamn</label>
            <input asp-for="userName" class="form-control" required />
            <span asp-validation-for="userName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="password" class="form-label">Lösenord</label>
            <input asp-for="password" type="password" class="form-control" required minlength="6" />
            <span asp-validation-for="password" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Registrera</button>
        </div>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    
</body>
</html>
