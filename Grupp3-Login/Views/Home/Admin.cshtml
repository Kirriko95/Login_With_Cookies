@{
    ViewData["Title"] = "Admin Sida";
}

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">

    <div class="container text-center mt-5">
        <div class="card shadow-sm p-4">
            <h1 class="mb-3">Admin Panel</h1>
            <p class="lead">Välkommen, Admin!</p>
            <a asp-controller="Account" asp-action="Index" class="btn btn-primary btn-lg mt-3">Hantera Konton</a>
            <a asp-controller="Home" asp-action="Logout" class="btn btn-danger btn-lg">Logga ut</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
