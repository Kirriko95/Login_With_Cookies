@model UpdateAccountDto

@{
    ViewData["Title"] = "Radera Konto";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3>Bekräfta radering</h3>
        </div>
        <div class="card-body">
            <p>Är du säker på att du vill radera kontot <strong>@Model.UserName</strong>?</p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger">Ja, radera</button>
                <a asp-action="Index" class="btn btn-secondary">Avbryt</a>
            </form>
        </div>
    </div>
</div>
